@model ComplaintSuggestion

@{
    ViewBag.Title = "Create";
}

<form asp-action="Create" class="form-create" method="post">
    <h2>Create</h2>

    <div class="form-label-group">
        <input type="text" asp-for="Name" class="form-control" placeholder="Name">
        <label for="Name">Name</label>
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-label-group">
        <input type="text" asp-for="Email" class="form-control" placeholder="Email">
        <label for="Email">Email</label>
        <span asp-validation-for="Email"></span>
    </div>
    <div class="form-label-group">
        <input type="text" asp-for="Subject" class="form-control" placeholder="Subject">
        <label for="Subject">Subject</label>
        <span asp-validation-for="Subject"></span>
    </div>
    <div class="form-label-group">
        <input type="text" asp-for="Description" class="form-control" placeholder="Description">
        <label for="Description">Description</label>
        <span asp-validation-for="Description"></span>
    </div>

    <input type="submit" value="Create" class="btn btn-lg btn-primary btn-block">
</form>